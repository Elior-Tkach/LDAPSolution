<Window x:Class="Setup_Application.SetupPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LDAP Setup" Height="400" Width="600">
    <Canvas>
        <Canvas.Background>
            <ImageBrush ImageSource="Accellix logo2.png" Stretch="UniformToFill"/>
        </Canvas.Background>

        <TextBlock Text="Enter user name:" Canvas.Left="20" Canvas.Top="57" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox x:Name="UserNameTextBox" Width="200" Canvas.Left="129" Canvas.Top="57"/>

        <Button Content="Find User" Width="100" Canvas.Left="20" Canvas.Top="112" Click="FindUserBtn_Click" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button Content="Find Group" Width="100" Canvas.Left="205" Canvas.Top="85" Click="FindGroupBtn_Click"/>
        <Button Content="Clear all users and groups" Width="200" Canvas.Left="372" Canvas.Top="60" Click="ClearAllBtn_Click" HorizontalAlignment="Left" VerticalAlignment="Center"/>

        <TextBlock Text="Found:" Canvas.Left="51" Canvas.Top="170"/>
        <ListBox x:Name="ResultsListBox" Height="100" Width="200" Canvas.Left="222" Canvas.Top="136" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <TextBlock Text="Selected:" Canvas.Left="20" Canvas.Top="220"/>

        <RadioButton x:Name="OperatorRadio" Content="Operator" GroupName="Role" Canvas.Left="20" Canvas.Top="250"/>
        <RadioButton x:Name="AdminRadio" Content="Administrator" GroupName="Role" Canvas.Left="159" Canvas.Top="257"/>

        <TextBox x:Name="SelectedTextBox" Width="300" IsReadOnly="True" Canvas.Left="20" Canvas.Top="280"/>
        <Button Content="Save" Width="100" Canvas.Left="372" Canvas.Top="289" Click="SaveBtn_Click" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Canvas>
</Window>
