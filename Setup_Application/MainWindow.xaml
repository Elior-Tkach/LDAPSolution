<Window x:Class="Setup_Application.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Setup_Application"
        Title="LDAP Application" Height="350" Width="525">
    <Viewbox Stretch="Uniform">
        <Grid Width="1200" Height="700">
            <TabControl x:Name="MainTabControl" Margin="0">
                <TabItem Header="Connection">
                    <local:ConnectionWithServer x:Name="connectionControl" Margin="0,0,5,9" />
                </TabItem>
                <!-- Setup tab can be added dynamically in code-behind -->
            </TabControl>
        </Grid>
    </Viewbox>
</Window>