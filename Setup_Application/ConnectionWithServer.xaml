<Window x:Class="Setup_Application.ConnectionWithServer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LDAP Connection" Height="600" Width="1000">
    <Canvas>
        <Canvas.Background>
            <ImageBrush ImageSource="Accellix logo2.png" Stretch="UniformToFill"/>
        </Canvas.Background>

        <!-- Title -->

        <TextBlock Text="Enter IP address/ host name:" Canvas.Left="48" Canvas.Top="100" Height="56" Width="329" FontSize="26" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:Name="HostTextBox" Width="250" FontSize="24" Canvas.Left="394" Canvas.Top="100" Height="46" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <Button x:Name="TestConnectionBtn" Content="Test connection" Width="191" FontSize="21" Canvas.Left="500" Canvas.Top="241" Click="TestConnectionBtn_Click" Height="32" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Button x:Name="SaveServerBtn" Content="Save the server" Width="172" FontSize="21" Canvas.Left="303" Canvas.Top="242" Click="SaveServerBtn_Click" Height="31" HorizontalAlignment="Left" VerticalAlignment="Center"/>

        <Button x:Name="ContinueBtn" Content="Continue to setup" Width="228" FontSize="23" Canvas.Left="416" Canvas.Top="171" Click="ContinueBtn_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Height="39"/>
        <TextBox x:Name="ErrorTextBox"
                 Width="676"
                 FontSize="18"
                 IsReadOnly="True"
                 Canvas.Left="235"
                 Canvas.Top="292"
                 Height="39"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 BorderThickness="0"
                 Background="Transparent"/>
    </Canvas>
</Window>
