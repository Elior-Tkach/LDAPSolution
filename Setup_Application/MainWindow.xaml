<Window x:Class="Setup_Application.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Setup_Application"
        Title="LDAP Application" Height="500" Width="775">
    <Viewbox Stretch="Uniform" Margin="0,0,0,20">
        <Grid Width="1200" Height="700">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="54*"/>
                <ColumnDefinition Width="23*"/>
                <ColumnDefinition Width="117*"/>
                <ColumnDefinition Width="1006*"/>
            </Grid.ColumnDefinitions>
            <TabControl x:Name="MainTabControl" Margin="0,10,0,0" Grid.ColumnSpan="4" Height="730" VerticalAlignment="Top">
                <TabItem Header="Connection">
                    <local:ConnectionWithServer x:Name="connectionControl" Margin="-8,0,-15,0" Height="699" />
                </TabItem>
                <!-- Setup tab can be added dynamically in code-behind -->
            </TabControl>
        </Grid>
    </Viewbox>
</Window>